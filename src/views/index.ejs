<%- include('partials/header') %>

    <main class="max-w-5xl w-full mx-auto px-6 py-10 flex-grow">

        <% if (successMessage) { %>
            <div
                class="bg-green-50 border border-green-300 text-green-700 px-6 py-4 rounded-xl flex items-start gap-3 transition-all mb-8 shadow-sm">
                <svg class="w-5 h-5 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                    <h4 class="font-bold text-sm">Berhasil!</h4>
                    <p class="text-sm">Data konten telah berhasil diperbarui di sistem.</p>
                </div>
            </div>
            <% } %>

                <div class="mb-12 flex flex-col md:flex-row md:items-center justify-between gap-8 pt-4">
                    <div class="flex-grow">
                        <h2 class="text-3xl font-extrabold text-gray-900 tracking-tight">Kustomisasi Harga Produk Telkom
                        </h2>
                        <p class="text-base text-gray-500 mt-2 max-w-xl leading-relaxed">
                            Pilih paket atau produk yang ingin diedit informasi harga maupun gambarnya secara dinamis
                            untuk Telegram Bot.
                        </p>
                    </div>
                    <div class="flex-shrink-0">
                        <img src="/assets/images/illustration.jpg" alt="Illustration"
                            class="w-full max-w-[300px] h-auto rounded-xl">
                    </div>
                </div>

                <% const internetItems=Object.values(contents).filter(item=> item.key.includes('indibiz'));
                    const prodigiItems = Object.values(contents).filter(item => !item.key.includes('indibiz'));
                    %>

                    <!-- Kategori Internet -->
                    <div class="mb-5 mt-4 flex items-center gap-2">
                        <div class="w-1.5 h-6 bg-red-600 rounded-full"></div>
                        <h3 class="text-xl font-bold text-gray-800">Internet</h3>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
                        <% internetItems.forEach(item=> { %>
                            <a href="/edit/<%= item.key %>"
                                class="group glass-panel rounded-2xl p-6 transition-all border border-gray-200 hover:border-red-300 block relative overflow-hidden bg-white hover:bg-red-50/10">
                                <div
                                    class="absolute top-0 left-0 w-1 h-full bg-red-100 group-hover:bg-red-500 transition-colors">
                                </div>
                                <h3 class="text-lg font-bold text-gray-900 group-hover:text-red-700 transition-colors">
                                    <%= item.title %>
                                </h3>
                            </a>
                            <% }) %>
                    </div>

                    <!-- Kategori Prodigi -->
                    <div class="mb-5 mt-8 flex items-center gap-2">
                        <div class="w-1.5 h-6 bg-red-600 rounded-full"></div>
                        <h3 class="text-xl font-bold text-gray-800">PRODIGI</h3>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6">

                        <!-- OCA Card -->
                        <div
                            class="glass-panel rounded-2xl p-6 border border-gray-200 relative bg-white flex flex-col h-full">
                            <div class="absolute top-0 left-0 w-1 h-full bg-red-500 rounded-l-2xl"></div>
                            <h3 class="text-xl font-bold text-gray-900 mb-4 ml-2">OCA</h3>
                            <div class="flex flex-col gap-2 ml-2 flex-grow">
                                <% const ocaItems=prodigiItems.filter(i=> i.key.includes('oca')); %>
                                    <% if (ocaItems.length> 0) { %>
                                        <% ocaItems.forEach(item=> { %>
                                            <a href="/edit/<%= item.key %>"
                                                class="text-sm font-semibold text-gray-700 bg-gray-50 hover:bg-red-50 hover:text-red-700 border border-gray-200 hover:border-red-200 rounded-xl px-4 py-3 transition-colors flex justify-between items-center group">
                                                <span>
                                                    <%= item.title %>
                                                </span>
                                                <svg class="w-4 h-4 text-gray-400 group-hover:text-red-500 transition-colors"
                                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z">
                                                    </path>
                                                </svg>
                                            </a>
                                            <% }) %>
                                                <% } else { %>
                                                    <p class="text-sm text-gray-500 italic">Belum ada pengaturan konten
                                                        yang tersedia.</p>
                                                    <% } %>
                            </div>
                        </div>

                        <!-- Eazy Cam Card -->
                        <div
                            class="glass-panel rounded-2xl p-6 border border-gray-200 relative bg-white flex flex-col h-full">
                            <div class="absolute top-0 left-0 w-1 h-full bg-red-500 rounded-l-2xl"></div>
                            <h3 class="text-xl font-bold text-gray-900 mb-4 ml-2">Eazy Cam</h3>
                            <div class="flex flex-col gap-2 ml-2 flex-grow">
                                <% const eazyItems=prodigiItems.filter(i=> i.key.includes('eazy')); %>
                                    <% if (eazyItems.length> 0) { %>
                                        <% eazyItems.forEach(item=> { %>
                                            <a href="/edit/<%= item.key %>"
                                                class="text-sm font-semibold text-gray-700 bg-gray-50 hover:bg-red-50 hover:text-red-700 border border-gray-200 hover:border-red-200 rounded-xl px-4 py-3 transition-colors flex justify-between items-center group">
                                                <span>
                                                    <%= item.title %>
                                                </span>
                                                <svg class="w-4 h-4 text-gray-400 group-hover:text-red-500 transition-colors"
                                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z">
                                                    </path>
                                                </svg>
                                            </a>
                                            <% }) %>
                                                <% } else { %>
                                                    <p class="text-sm text-gray-500 italic">Belum ada pengaturan konten
                                                        yang tersedia.</p>
                                                    <% } %>
                            </div>
                        </div>

                        <!-- Netmonk Card -->
                        <div
                            class="glass-panel rounded-2xl p-6 border border-gray-200 relative bg-gray-50 flex flex-col h-full opacity-80">
                            <div class="absolute top-0 left-0 w-1 h-full bg-gray-300 rounded-l-2xl"></div>
                            <h3 class="text-xl font-bold text-gray-700 mb-3 ml-2">Netmonk</h3>
                            <div class="flex flex-col gap-2 ml-2 flex-grow justify-center">
                                <p
                                    class="text-sm text-gray-500 italic px-3 py-2 bg-gray-100 rounded-lg border border-gray-200 text-center">
                                    Produk ini belum menyediakan konfigurasi konten dinamis.</p>
                            </div>
                        </div>

                        <!-- Pijar Card -->
                        <div
                            class="glass-panel rounded-2xl p-6 border border-gray-200 relative bg-gray-50 flex flex-col h-full opacity-80">
                            <div class="absolute top-0 left-0 w-1 h-full bg-gray-300 rounded-l-2xl"></div>
                            <h3 class="text-xl font-bold text-gray-700 mb-3 ml-2">Pijar Sekolah</h3>
                            <div class="flex flex-col gap-2 ml-2 flex-grow justify-center">
                                <p
                                    class="text-sm text-gray-500 italic px-3 py-2 bg-gray-100 rounded-lg border border-gray-200 text-center">
                                    Produk ini belum menyediakan konfigurasi konten dinamis.</p>
                            </div>
                        </div>

                    </div>
    </main>

    <%- include('partials/footer') %>